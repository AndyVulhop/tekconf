@using System.Web.Optimization
@model TekConf.UI.Web.ViewModels.SpeakersViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>For Speakers - tekconf</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600" rel="stylesheet">

   @Styles.Render("~/css/api/index")

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
<![endif]-->

</head>

<body>
    @Html.Partial("Header")

    <div id="subheader">
        <div class="inner">
            <div class="container">
                <h1>For Speakers</h1>
            </div>
            <!-- /.container -->
        </div>
        <!-- /inner -->
    </div>
    <!-- /subheader -->

    <div id="subpage">
	    <div class="container">
		    <div class="page-header">
					<h3>Open Calls</h3>
					
                    <div class="span12">
                        <table class="table">
                            <tbody>
                                @foreach (var conference in Model.OpenConferences)
                                {
                                    <tr>
                                        <td><a href="~/Conferences/@conference.slug" class="btn btn-primary btn-mini">View Conference</a></td>
                                        <td>@conference.name</td>
                                        <td>@HtmlHelpers.FormatDateRange(conference.start, conference.end)</td>
                                        <td>@HtmlHelpers.FormatAddress(conference.address)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>					

		    </div>
		    <div class="page-header"><h3>My Conferences</h3></div>
		    <div class="page-header"><h3>My Presentations</h3></div>
				<div class="page-header"><h3>My Profile</h3></div>
	    </div>
        <!-- /container -->
    </div>
    <!-- /subpage -->

    @Html.Partial("Extra")

    @Html.Partial("Footer")

    @Scripts.Render("~/js/commonFaq")

    <script>
        $(function () {
        });
    </script>
</body>
</html>